        <field name="name">tablas.diot.search.view</field>
        <field name="model">diot.cfdi</field>
        <field name="arch" type="xml">
            <search string="Tablas Nomina SAT">
                <field name="month"/>
                <field name="year"/>
            </search>
        </field>
    </record>

    <record id="action_tree_tablas_diot" model="ir.actions.act_window">
        <field name="name">DIOT</field>
        <field name="res_model">diot.cfdi</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="tree_tablas_diot_view" />
        <field name="search_view_id" ref="search_tablas_diot_view" />
        <field name="context">{}</field>
